generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Categoria {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  descricao   String
  produtos    String[]   @db.ObjectId  // Apenas IDs dos produtos relacionados

  Produto Produto[]
}

model Produto {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  nome            String
  marca           String
  detalhes        String?
  quantidade      Float
  unidade_medida  String
  preco_unitario  Float
  qtd_estoque     Float
  categoria_id    String      @db.ObjectId 
  categoria       Categoria   @relation(fields:[categoria_id], references:[id])
  fornecedor_ids  String[]    @db.ObjectId 
}

model Fornecedores {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  razao_social    String
  nome_fantasia   String?
  cnpj            String      @unique
  email           String      @unique
  logradouro      String
  num_casa        String
  complemento     String?
  bairro          String
  municipio       String
  uf              String
  cep             String
  celular         String
  produto_ids     String[]    @db.ObjectId 
}

model cliente {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  nome            String
  cpf            String      @unique
  email           String      @unique
  logradouro      String
  num_casa        String
  complemento     String?
  bairro          String
  municipio       String
  uf              String
  cep             String
  celular         String
}
